{% extends 'graphs/graph.svg.twig' %}

{% set dataCount = data["pressure"]|length %}
{% set pMax = data["pressure"]|yUpperLimit|default(1150) %}
{% set pMin = data["pressure"]|yLowerLimit|default(850) %}
{% set timeMax = data["pressure"]|maxTime %}
{% set timeMin = data["pressure"]|minTime %}
{% set timeTicks = 8 %}

{% block graph %}
    <path d="
    {% for timestamp, value in data["pressure"] %}
        {% set x = timestamp|mapRange(timeMin, timeMax, 20, frameSize - 40) %}
        {% set y = value|mapRange(pMin, pMax, frameSize - 40, 0) %}
        {% if loop.index == 1 %}
            M {{ x }} {{ y }}
        {% else %}
            L {{ x }} {{ y }}
        {% endif %}
    {% endfor %}
    " fill="transparent" stroke-width="1.5" />
{% endblock %}

{% block xticks %}
    {% for i in 1..timeTicks %}
        <g transform="translate({{ i|mapRange(1, timeTicks, 20, frameSize - 40) }}, 0)">
            {% set timeStamp = (timeMin + (timeMax - timeMin) / timeTicks * i)|round %}
            <text transform="rotate(45)">{{ timeStamp|date("H:i") }}</text>
            <text transform="rotate(45)" x="-10" y="20">{{ timeStamp|date("d.m.y") }}</text>
        </g>
    {% endfor %}
{% endblock %}
{% block yticks %}
    {% for i in yTicks(pMin, pMax) %}
        <g>
            <text size="2px" x="70" y="{{ i|mapRange(pMin, pMax, frameSize - 40, 0) }}" text-anchor="end">{{ i }} hPa</text>
            <rect x="90" y="{{ i|mapRange(pMin, pMax, frameSize - 40, 0) - 6 }}" width="10" height="1.5"></rect>
        </g>
    {% endfor %}
{% endblock %}
