{% extends 'graphs/graph.svg.twig' %}

{% set dataCount = data["temperature"]|length %}
{% set sepWidth = frameSize / (dataCount + 1) %}
{% set tMax = 60 %}
{% set tMin = -30 %}
{% if dataCount %}
    {% set timeMax = max(data["temperature"]|keys) %}
    {% set timeMin = min(data["temperature"]|keys) %}
{% else %}
    {% set timeMax = date().timestamp %}
    {% set timeMin = date().timestamp - 3600 * 24 %}
{% endif %}

{% block graph %}
    <path d="
    {% for timestamp, value in data["temperature"] %}
        {% set x = timestamp|mapRange(timeMin, timeMax, 20, frameSize - 40) %}
	{% set y = value|mapRange(tMin, tMax, frameSize - 40, 0) %}
        {% if loop.index == 1 %}
	    M {{ x }} {{ y }}
	{% else %}
	    L {{ x }} {{ y }}
	{% endif %}
    {% endfor %}
    " fill="transparent" stroke="black" stroke-width="2" />
{% endblock %}

{% block xticks %}
    {% for i in 1..5 %}
        <g transform="translate({{ i|mapRange(1, 5, 20, frameSize - 40) }}, 0)">
            <text transform="rotate(45)" stroke="black">{{ (timeMin + (timeMax - timeMin) / 5 * i)|round|date("H:i") }}</text>
            <text transform="rotate(45)" stroke="black" x="-10" y="20">{{ (timeMin + (timeMax - timeMin) / 5 * i)|round|date("d.m.y") }}</text>
        </g>
    {% endfor %}
{% endblock %}
{% block yticks %}
    {% for i in (tMin..tMax)|filter(v => v is divisible by(5)) %}
        <g>
            <text stroke="black" size="2px" x="70" y="{{ i|mapRange(tMin, tMax, frameSize - 40, 0) }}" text-anchor="end">{{ i }} Â°C</text>
            <rect x="90" y="{{ i|mapRange(tMin, tMax, frameSize - 40, 0) - 6 }}" width="10" height="3"></rect>
        </g>
    {% endfor %}
{% endblock %}
