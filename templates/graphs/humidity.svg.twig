{% extends 'graphs/graph.svg.twig' %}

{% set dataCount = data["humidity"]|length %}
{% set hMax = data["humidity"]|yUpperLimit|default(100) %}
{% set hMin = data["humidity"]|yLowerLimit|default(0) %}
{% set timeMax = data["humidity"]|maxTime %}
{% set timeMin = data["humidity"]|minTime %}

{% block graph %}
    <path d="
    {% for timestamp, value in data["humidity"] %}
        {% set x = timestamp|mapRange(timeMin, timeMax, 20, frameSize - 40) %}
        {% set y = value|mapRange(hMin, hMax, frameSize - 40, 0) %}
        {% if loop.index == 1 %}
            M {{ x }} {{ y }}
        {% else %}
            L {{ x }} {{ y }}
        {% endif %}
    {% endfor %}
    " fill="transparent" stroke="black" stroke-width="2" />
{% endblock %}

{% block xticks %}
    {% for i in 1..8 %}
        <g transform="translate({{ i|mapRange(1, 8, 20, frameSize - 40) }}, 0)">
            <text transform="rotate(45)" stroke="black">{{ (timeMin + (timeMax - timeMin) / 5 * i)|round|date("H:i") }}</text>
            <text transform="rotate(45)" stroke="black" x="-10" y="20">{{ (timeMin + (timeMax - timeMin) / 5 * i)|round|date("d.m.y") }}</text>
        </g>
    {% endfor %}
{% endblock %}
{% block yticks %}
    {% for i in yTicks(hMin, hMax) %}
        <g>
            <text stroke="black" size="2px" x="70" y="{{ i|mapRange(hMin, hMax, frameSize - 40, 0) }}" text-anchor="end">{{ i }} %</text>
            <rect x="90" y="{{ i|mapRange(hMin, hMax, frameSize - 40, 0) - 6 }}" width="10" height="3"></rect>
        </g>
    {% endfor %}
{% endblock %}
